@model NmyBlog.Model.Admin
<blockquote class="layui-elem-quote">添加管理员</blockquote>
<div style="padding: 10px">

    <form class="layui-form" method="post" action="">
        <div class="layui-form-item">
            <label class="layui-form-label">用户名</label>
            <div class="layui-input-block">
                @Html.TextBoxFor(a => a.UserName, new { placeholder = "请输入用户名", @class = "layui-input" })
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">密码</label>
            <div class="layui-input-block">
                @Html.TextBoxFor(a => a.Password, new { placeholder = "请输入密码", @class = "layui-input" })
            </div>
        </div>

        <div class="layui-form-item layui-form-text">
            <label class="layui-form-label">备注</label>
            <div class="layui-input-block">
                @Html.TextAreaFor(a => a.Remark, new { placeholder = "请输入备注", @class = "layui-textarea" })
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" type="submit">立即提交</button>
            </div>
        </div>

    </form>

</div>