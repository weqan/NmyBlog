@model List<NmyBlog.Model.Admin>

<blockquote class="layui-elem-quote">管理员管理</blockquote>
<div style="padding: 10px">
    <div>
        <a class="layui-btn" href="/Adnn1n/Admin/Add">
            <i class="layui-icon">&#xe608;</i> 添加
        </a>
    </div>


    <table class="layui-table">
        <thead>
        <tr>
            <th>ID</th>
            <th>创建时间</th>
            <th>用户名</th>
            <th>备注</th>
            <th>管理</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var ad in Model)
        {
            <tr>
                <td>@ad.Id</td>
                <td>@ad.CreateDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@ad.UserName</td>
                <td>@ad.Remark</td>
                <td>
                    <a href="/Adnn1n/Admin/Add/@ad.Id"><i class="layui-icon">&#xe642;</i> 编辑</a>
                    <a href="/Adnn1n/Admin/Del/@ad.Id" onclick="return confirm('是否确认删除？')"><i class="layui-icon">&#x1006;</i> 删除</a>
                </td>
            </tr>
        }

        </tbody>
    </table>
</div>